<% include ./partials/head %>

<div class="ui main text container piled segment">
    <div class="ui huge header">Edit Blog</div>
    
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        
        
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
        </div>
        
        
        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]" required><%= blog.body %></textarea>
        </div>
        
        <input class="ui basic teal button" type="submit">
        
    </form>
</div>

<% include ./partials/foot %>